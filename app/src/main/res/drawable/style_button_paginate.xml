<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/colorBlackCustom" />
      <stroke
          android:width="0dp"
          android:color="#449d48" />
      <corners
          android:radius="18dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/colorBlackCustom"
          android:endColor="@color/colorBlackCustom"
          android:angle="270" />
      <stroke
          android:width="0dp"
          android:color="#2d2d2d" />
      <corners
          android:radius="90dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>